<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Success"
    android:orientation="vertical"
    android:background="#D23E3F">

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:id="@+id/attention"
        android:layout_below="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_12"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_below="@+id/attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maaf,"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaksi anda \ngagal,silahkan\ncoba lagi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"/>

    <Button
        android:id="@+id/buttonnext"
        android:layout_below="@id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Tutup"
        android:textColor="#D23E3F"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_path_83"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_planet" />

    <ImageView
        android:id="@+id/astronaut"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_astronaut" />
</RelativeLayout>