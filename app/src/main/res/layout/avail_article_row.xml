<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="10dp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="362dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:visibility="visible"
                android:id="@+id/imgThumbnail_articlefrag"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/txtTitle_articlefrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:layout_below="@+id/imgThumbnail_articlefrag"
                android:text="Persiapan Sebelum Ujian Hidup"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/txtPrev_articlefrag"
                android:layout_below="@+id/txtTitle_articlefrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:text="Preview preview preview preview preview preview preview preview preview preview preview preview preview preview preview "
                android:textSize="8sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txtPrev_articlefrag">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:layout_below="@+id/txtPrev_articlefrag"
                    android:text="Baca Sekarang"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_below="@+id/txtPrev_articlefrag"
                    android:id="@+id/txtTime_articlefrag"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:text="5 Menit" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>