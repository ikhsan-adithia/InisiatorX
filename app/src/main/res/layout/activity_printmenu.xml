<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Printmenu">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="   Print online InisiatorX"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="#ffffff"
        android:gravity="center|left"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:text="Perhatian!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="13dp"
            android:padding="10dp"
            android:text="Untuk menggunakan fitur E-print InisiatorX, file anda harus ber ekstensi PDF. Anda bisa menggunakan fitur pengubah file ke PDF dan fitur menggabungkan beberapa file PDF pada pilihan di bawah ini"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subtitle"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btntopdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/title"
            android:background="@drawable/rounded_corner_5dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Ubah file kamu ke PDF"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btncombine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/title"
            android:background="@drawable/rounded_corner_5dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Gabung file kamu ke 1 PDF"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btnprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/title"
            android:background="@drawable/rounded_corner_5dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Print file PDF kamu sekarang"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </LinearLayout>


</RelativeLayout>