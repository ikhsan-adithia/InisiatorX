<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteBioActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Tempat dan Tanggal Lahir"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/tempat_lahir_cbio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:entries="@array/kota"
                android:background="@drawable/dropdwn"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/dot_text_cbio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/date_picker_cbio"
                    android:layout_alignBottom="@+id/date_picker_cbio"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="-- / -- / ----"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/date_picker_cbio"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_pill"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="Pick Date"
                    android:textAllCaps="false" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Kota Tempat Tinggal"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/kota_cbio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:entries="@array/kota"
                android:background="@drawable/dropdwn"
                android:layout_below="@+id/title_kota"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Alamat"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/alamat_cbio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="Alamat"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/title_jeniskelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Jenis Kelamin"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/jenis_kelamin_cbio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:entries="@array/jenis"
                android:background="@drawable/dropdwn"
                android:layout_below="@+id/title_jeniskelamin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Agama"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/agama_cbio"
                android:entries="@array/agama"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dropdwn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Status"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/status_cbio"
                android:entries="@array/status"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dropdwn" />

            <Button
                android:id="@+id/submit_cbio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circular_button"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Submit"
                android:textColor="@color/colorTextORIcon"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>