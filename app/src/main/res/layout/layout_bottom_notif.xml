<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:id="@+id/bottomSheetContainer"
    android:backgroundTint="#D23E3F">

    <ImageView
        android:id="@+id/constracture"
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/ic_end"
        android:rotation="90"/>

    <ImageView
        android:id="@+id/close"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_close_white"/>


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_astronaut"
        android:rotation="-20"/>

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="30dp"
        android:layout_marginRight="150dp"
        android:layout_below="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_astronaut"
        android:rotation="20"
        android:scaleX="-1"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image"
        android:background="#ffffff">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode QR tidak aktif"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:text="Maaf, kode QR yang anda scan saat ini tidak dapat ditemukan oleh sistem. Silahkan untuk menghubungi customer service untuk informasi lebih detail."/>

        <Button
            android:id="@+id/close2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_corner_5dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="20dp"
            android:text="Oke"
            android:textColor="#ffffff"
            android:layout_marginRight="30dp"/>
    </LinearLayout>

</RelativeLayout>