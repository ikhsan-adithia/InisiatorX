<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/request_pin_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    android:background="@color/whiteTextColor"
    tools:context=".Ganci"
    tools:ignore="ExtraText, HardcodedText, ButtonStyle">

    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:visibility="visible"
        style="@style/SpinKitView.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:SpinKit_Color="@color/colorPrimary" />

    <ScrollView
        android:id="@+id/main"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:text="Detail Pesanan"
                android:textColor="#F95B48"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="33dp"
                android:gravity="start"
                android:text="Gantungan Kunci"
                android:textColor="#000000" />


            <LinearLayout
                android:id="@+id/awal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="Ukuran"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/dropdwn" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="Laminasi"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/dropdwn" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="Jenis Gantungan Kunci"
                android:textSize="13sp" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dropdwn" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/titasd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/kode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#CDD2D6"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:hint="Kode Promo"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHint="#CDD2D6"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="start"
                android:text="Merchant Tujuan Kiriman"
                android:textSize="13sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dropdwn" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilJumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/titJumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#CDD2D6"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:hint="Jumlah Pin"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#CDD2D6"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Switch
                android:id="@+id/switchh"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="start"
                android:text="Jumlah Sisi (Optional)"
                android:textOff="1"
                android:textOn="2"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/textView7"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="Unggah Desain"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/linear1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageViewRequestPin1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/upload"
                    android:elevation="50dp"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageViewRequestPin2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/upload"
                    android:elevation="50dp"
                    android:visibility="gone"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="2dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btncheck"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner_5dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Buat Pesanan"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="Harga Awal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/asiap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="Rp. 0000"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="Potongan Kode Promo"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="Rp. 0000"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="Total Bayar"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="Rp. 0000"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnedit"
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_corner_5dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="Edit Pesanan"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnsubmit"
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_corner_5dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="Pesan Sekarang"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>