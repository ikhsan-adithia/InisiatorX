<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:id="@+id/bottomSheetContainer">

    <ImageView
        android:id="@+id/close"
        android:layout_marginTop="20dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_close_black"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/merchant"
        android:layout_below="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_circle_profile_home">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicture_Home"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/profile_inisiator"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/nama_merchant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Merchant InisiatorX"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textSize="20dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchant"
        android:text="ISI NOMINAL"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="40dp"
        android:hint="Rp0"
        android:ems="10"
        android:inputType="number" />

    <LinearLayout
        android:id="@+id/choise"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn5rebu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_group_13"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="#000000"
                android:text="Rp5.000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn10rebu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_group_13"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="#000000"
                android:text="Rp10.000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn15rebu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_group_13"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="#000000"
                android:text="Rp15.000"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn20rebu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_group_13"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="#000000"
                android:text="Rp20.000"/>

        </LinearLayout>

    </LinearLayout>


        <Button
            android:id="@+id/btnsubmit"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_below="@+id/nominal"
            android:background="@drawable/rounded_corner_5dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="KONFIRMASI"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

</RelativeLayout>